{
  "variables": {
    "name": "ubuntu-14.04-amd64",
    "description": "Ubuntu 14.04 x86_64 (amd64)",
    "version": "0.1.0",
    "archive_mirror": "jp.archive.ubuntu.com",
    "releases_mirror": "jp.releases.ubuntu.com",
    "jenkins_build_number": "{{env `BUILD_NUMBER`}}",
    "awscli_version": "{{env `AWSCLI_VERSION`}}",
    "account_id": "{{env `AWS_ACCOUNT_ID`}}",
    "access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "x509_key_path": "{{env `EC2_PRIVATE_KEY`}}",
    "x509_cert_path": "{{env `EC2_CERT`}}",
    "region": "{{env `AWS_DEFAULT_REGION`}}",
    "vpc_id": "{{env `EC2_VPC_ID`}}",
    "subnet_id": "{{env `EC2_SUBNET_ID`}}",
    "s3_bucket": "{{env `S3_BUCKET`}}",
    "instance_type": "m3.medium",
    "source_ami": "{{env `EC2_SOURCE_AMI`}}",
    "chef_client": "false",
    "chef_client_version": "{{env `CHEF_CLIENT_VERSION`}}",
    "headless": "true"
  },
  "description": "{{user `description`}}",
  "builders": [
    {
      "type": "virtualbox-iso",
      "headless": "{{user `headless`}}",
      "vm_name": "packer_{{user `name`}}",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=localdomain<wait>",
        " netcfg/get_hostname=localhost<wait>",
        " mirror/http/hostname={{ user `archive_mirror`}}",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-14.04/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "guest_additions_path": "VBoxGuestAdditions_{{ .Version }}.iso",
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "http://{{user `releases_mirror`}}/14.04.3/ubuntu-14.04.3-server-amd64.iso"
      ],
      "output_directory": "artifacts/virtualbox/{{user `name`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "virtualbox_version_file": ".virtualbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "384"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--cpus",
          "1"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--nictype1",
          "virtio"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--rtcuseutc",
          "on"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--natdnshostresolver1",
          "on"
        ]
      ]
    },
    {
      "type": "virtualbox-ovf",
      "headless": true,
      "vm_name": "packer_{{user `name`}}",
      "source_path": "../images/virtualbox/{{user `name`}}/box.ovf",
      "boot_wait": "10s",
      "guest_additions_path": "VBoxGuestAdditions_{{ .Version }}.iso",
      "output_directory": "artifacts/virtualbox/{{user `name`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "virtualbox_version_file": ".virtualbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "384"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--cpus",
          "1"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--nictype1",
          "virtio"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--rtcuseutc",
          "on"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--natdnshostresolver1",
          "on"
        ]
      ]
    },
    {
      "type": "vmware-iso",
      "headless": "{{user `headless`}}",
      "vm_name": "packer_{{user `name`}}",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=localdomain<wait>",
        " netcfg/get_hostname=localhost<wait>",
        " mirror/http/hostname={{ user `archive_mirror`}}",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-14.04/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "skip_compaction": true,
      "guest_os_type": "ubuntu-64",
      "http_directory": "http",
      "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "http://{{user `releases_mirror`}}/14.04.3/ubuntu-14.04.3-server-amd64.iso"
      ],
      "output_directory": "artifacts/vmware/{{user `name`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "vmx_data": {
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1",
        "memsize": "384"
      }
    },
    {
      "type": "vmware-vmx",
      "headless": true,
      "vm_name": "packer_{{user `name`}}",
      "source_path": "../images/vmware/{{user `name`}}/{{user `name`}}.vmx",
      "boot_wait": "10s",
      "skip_compaction": true,
      "output_directory": "artifacts/vmware/{{user `name`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "vmx_data": {
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1",
        "memsize": "384"
      }
    },
    {
      "type": "parallels-iso",
      "headless": true,
      "vm_name": "packer_{{user `name`}}",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=localdomain<wait>",
        " netcfg/get_hostname=localhost<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-14.04/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "parallels_tools_flavor": "lin",
      "guest_os_type": "ubuntu",
      "http_directory": "http",
      "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "http://{{user `releases_mirror`}}/14.04.3/ubuntu-14.04.3-server-amd64.iso"
      ],
      "output_directory": "artifacts/parallels/{{user `name`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "prlctl_version_file": ".prlctl_version",
      "prlctl": [
        [
          "set",
          "{{ .Name }}",
          "--memsize",
          "384"
        ],
        [
          "set",
          "{{ .Name }}",
          "--cpus",
          "1"
        ]
      ]
    },
    {
      "type": "parallels-pvm",
      "headless": true,
      "vm_name": "packer_{{user `name`}}",
      "source_path": "../images/parallels/{{user `name`}}/{{user `name`}}.pvm",
      "boot_wait": "10s",
      "reassign_mac": true,
      "parallels_tools_flavor": "lin",
      "output_directory": "artifacts/parallels/{{user `name`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "prlctl_version_file": ".prlctl_version",
      "prlctl": [
        [
          "set",
          "{{ .Name }}",
          "--memsize",
          "384"
        ],
        [
          "set",
          "{{ .Name }}",
          "--cpus",
          "1"
        ]
      ]
    },
    {
      "type": "amazon-ebs",
      "ami_name": "{{user `name`}}-{{timestamp}}",
      "ami_description": "{{user `description`}}",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "region": "{{user `region`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "instance_type": "{{user `instance_type`}}",
      "source_ami": "{{user `source_ami`}}",
      "ami_virtualization_type": "hvm",
      "associate_public_ip_address": "true",
      "temporary_key_pair_name": "packer_{{user `name`}}-{{timestamp}}",
      "ssh_username": "ubuntu",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "gp2",
          "volume_size": 10,
          "delete_on_termination": true
        }
      ],
      "tags": {
        "Name": "{{user `name`}}",
        "Version": "{{user `version`}}",
        "CreationDate": "{{isotime \"Mon Jan _2 15:04:05 UTC 2006\"}}",
        "Architecture": "x86_64",
        "RootDeviceType": "ebs"
      }
    },
    {
      "type": "amazon-instance",
      "ami_name": "{{user `name`}}-{{timestamp}}",
      "ami_description": "{{user `description`}}",
      "account_id": "{{user `account_id`}}",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "x509_key_path": "{{user `x509_key_path`}}",
      "x509_cert_path": "{{user `x509_cert_path`}}",
      "x509_upload_path": "/var/tmp",
      "region": "{{user `region`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "s3_bucket": "{{user `s3_bucket`}}/{{user `name`}}-{{timestamp}}",
      "instance_type": "{{user `instance_type`}}",
      "source_ami": "{{user `source_ami`}}",
      "ami_virtualization_type": "hvm",
      "associate_public_ip_address": "true",
      "bundle_prefix": "{{user `name`}}-{{timestamp}}",
      "bundle_vol_command": "sudo -H -S -E -n bash /var/tmp/ec2/ec2-bundle-vol.sh -k {{.KeyPath}} -u {{.AccountId}} -c {{.CertPath}} -r {{.Architecture}} -d {{.Destination}} -p {{.Prefix}}",
      "bundle_upload_command": "sudo -H -S -E -n bash /var/tmp/ec2/ec2-upload-bundle.sh -b {{.BucketName}} -m {{.ManifestPath}} -a {{.AccessKey}} -s {{.SecretKey}} -d {{.BundleDirectory}} --region {{.Region}}",
      "temporary_key_pair_name": "packer_{{user `name`}}-{{timestamp}}",
      "ssh_username": "ubuntu",
      "tags": {
        "Name": "{{user `name`}}",
        "Version": "{{user `version`}}",
        "CreationDate": "{{isotime \"Mon Jan _2 15:04:05 UTC 2006\"}}",
        "Architecture": "x86_64",
        "RootDeviceType": "instance-store"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/common",
      "destination": "/var/tmp"
    },
    {
      "type": "file",
      "only": [
        "virtualbox-iso",
        "vmware-iso",
        "parallels-iso"
      ],
      "source": "files/vagrant",
      "destination": "/var/tmp"
    },
    {
      "type": "file",
      "source": "files/chef",
      "destination": "/var/tmp"
    },
    {
      "type": "file",
      "only": [
        "amazon-ebs",
        "amazon-instance"
      ],
      "source": "files/ec2",
      "destination": "/var/tmp"
    },
    {
      "type": "shell",
      "only": [
        "virtualbox-iso",
        "vmware-iso",
        "parallels-iso"
      ],
      "environment_vars": [
        "ARCHIVE_MIRROR=http://{{user `archive_mirror`}}/ubuntu",
        "JENKINS_BUILD_NUMBER={{user `jenkins_build_number`}}",
        "PACKER_BUILD_NAME={{user `name`}}",
        "PACKER_BUILD_TIMESTAMP={{timestamp}}",
        "PACKER_BUILD_VERSION={{user `version`}}",
        "AWS_DEFAULT_REGION={{user `region`}}",
        "AWSCLI_VERSION={{user `awscli_version`}}",
        "CHEF_CLIENT_VERSION={{user `chef_client_version`}}"
      ],
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -H -S -E bash '{{ .Path }}'",
      "scripts": [
        "scripts/vagrant/hostname.sh",
        "scripts/common/update.sh",
        "scripts/common/packages.sh",
        "scripts/vagrant/packages.sh",
        "scripts/common/sshd.sh",
        "scripts/vagrant/motd.sh",
        "scripts/common/motd.sh",
        "scripts/common/reboot.sh",
        "scripts/vagrant/vagrant.sh",
        "scripts/common/disable-ipv6.sh",
        "scripts/common/networking.sh",
        "scripts/vagrant/guest-additions.sh",
        "scripts/common/python-pip.sh",
        "{{if (user `chef_client`) ne `false` }}scripts/common/chef-client.sh{{else}}{{end}}",
        "scripts/common/awscli.sh",
        "scripts/common/sudoers.sh",
        "scripts/vagrant/grub.sh",
        "scripts/common/clean-up.sh",
        "scripts/vagrant/minimize.sh"
      ]
    },
    {
      "type": "shell",
      "only": [
        "virtualbox-ovf",
        "vmware-vmx",
        "parallels-pvm"
      ],
      "environment_vars": [
        "ARCHIVE_MIRROR=http://{{user `archive_mirror`}}/ubuntu",
        "JENKINS_BUILD_NUMBER={{user `jenkins_build_number`}}",
        "PACKER_BUILD_NAME={{user `name`}}",
        "PACKER_BUILD_TIMESTAMP={{timestamp}}",
        "PACKER_BUILD_VERSION={{user `version`}}",
        "AWS_DEFAULT_REGION={{user `region`}}",
        "AWSCLI_VERSION={{user `awscli_version`}}",
        "CHEF_CLIENT_VERSION={{user `chef_client_version`}}"
      ],
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -H -S -E bash '{{ .Path }}'",
      "scripts": [
        "scripts/vagrant/motd.sh",
        "scripts/common/clean-up.sh",
        "scripts/vagrant/minimize.sh"
      ]
    },
    {
      "type": "shell",
      "only": [
        "amazon-ebs"
      ],
      "environment_vars": [
        "ARCHIVE_MIRROR=http://{{user `archive_mirror`}}/ubuntu",
        "JENKINS_BUILD_NUMBER={{user `jenkins_build_number`}}",
        "PACKER_BUILD_NAME={{user `name`}}",
        "PACKER_BUILD_TIMESTAMP={{timestamp}}",
        "PACKER_BUILD_VERSION={{user `version`}}",
        "PACKER_SOURCE_AMI={{user `source_ami`}}",
        "AWS_DEFAULT_REGION={{user `region`}}",
        "AWSCLI_VERSION={{user `awscli_version`}}",
        "CHEF_CLIENT_VERSION={{user `chef_client_version`}}"
      ],
      "execute_command": "{{ .Vars }} sudo -H -S -E -n bash '{{ .Path }}'",
      "scripts": [
        "scripts/ec2/hostname.sh",
        "scripts/common/update.sh",
        "scripts/common/packages.sh",
        "scripts/ec2/packages.sh",
        "scripts/common/sshd.sh",
        "scripts/ec2/motd.sh",
        "scripts/common/motd.sh",
        "scripts/ec2/resize-root.sh",
        "scripts/common/reboot.sh",
        "scripts/common/disable-ipv6.sh",
        "scripts/common/networking.sh",
        "scripts/common/python-pip.sh",
        "scripts/common/awscli.sh",
        "scripts/common/clean-up.sh",
        "scripts/common/sudoers.sh",
        "scripts/ec2/grub.sh"
      ]
    },
    {
      "type": "shell",
      "only": [
        "amazon-instance"
      ],
      "environment_vars": [
        "ARCHIVE_MIRROR=http://{{user `archive_mirror`}}/ubuntu",
        "JENKINS_BUILD_NUMBER={{user `jenkins_build_number`}}",
        "PACKER_BUILD_NAME={{user `name`}}",
        "PACKER_BUILD_TIMESTAMP={{timestamp}}",
        "PACKER_BUILD_VERSION={{user `version`}}",
        "PACKER_SOURCE_AMI={{user `source_ami`}}",
        "AWS_DEFAULT_REGION={{user `region`}}",
        "AWSCLI_VERSION={{user `awscli_version`}}",
        "CHEF_CLIENT_VERSION={{user `chef_client_version`}}"
      ],
      "execute_command": "{{ .Vars }} sudo -H -S -E -n bash '{{ .Path }}'",
      "scripts": [
        "scripts/ec2/hostname.sh",
        "scripts/common/update.sh",
        "scripts/common/packages.sh",
        "scripts/ec2/packages.sh",
        "scripts/common/sshd.sh",
        "scripts/ec2/motd.sh",
        "scripts/common/motd.sh",
        "scripts/common/reboot.sh",
        "scripts/common/disable-ipv6.sh",
        "scripts/common/networking.sh",
        "scripts/ec2/ec2-ami-tools.sh",
        "scripts/common/python-pip.sh",
        "scripts/common/awscli.sh",
        "scripts/common/clean-up.sh",
        "scripts/common/sudoers.sh",
        "scripts/ec2/grub.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "except": [
        "amazon-ebs",
        "amazon-instance"
      ],
      "vagrantfile_template": "templates/Vagrantfile.template",
      "output": "../images/{{ .Provider }}/{{user `name`}}.box",
      "keep_input_artifact": false,
      "compression_level": 9
    }
  ]
}
